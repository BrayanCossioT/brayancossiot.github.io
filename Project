  <button id="open-editor">ðŸ¤¡</button>

  <!-- Overlay + Editor -->
  <div class="overlay" id="overlay">
    <div class="editor-modal">
      <h3>Editor de estilos</h3>
      <textarea id="editor"></textarea>
      <button id="close-editor">Cerrar</button>
    </div>
  </div>

  <script>
    const styleTag = document.getElementById("dynamic-style");
    const editor = document.getElementById("editor");
    const overlay = document.getElementById("overlay");
    const openBtn = document.getElementById("open-editor");
    const closeBtn = document.getElementById("close-editor");

    // Cargar estilos actuales
    editor.value = styleTag.textContent;

    // Actualizar CSS en tiempo real
    editor.addEventListener("input", () => {
      styleTag.textContent = editor.value;
    });

    // Abrir modal
    openBtn.addEventListener("click", () => {
      overlay.style.display = "flex";
    });

    // Cerrar modal
    closeBtn.addEventListener("click", () => {
      overlay.style.display = "none";
    });
  </script>
